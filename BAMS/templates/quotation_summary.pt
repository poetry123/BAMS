<div metal:use-macro="load: layout.pt">
  <div metal:fill-slot="content">
      <div class="x_panel">
                  <div class="x_title">
                    <h2>Quotation Summary</h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="datatable-buttons" class="table table-striped table-bordered" style="font-size:13px">
                      <thead>
                        <tr>
                          <th>Company Name</th>
                          <th>Department</th>
                          <th>Order Address</th>
                          <th>Tel</th>
                          <th>Email</th>
                          <th>Order People</th>
                          <th>Item Number</th>
                          <th>Item Description</th>
                          <th>Quantity</th>
                          <th>Unit Price</th>
                        </tr>
                      </thead>

                      <tbody>
                        <p tal:repeat="quotation quotations">
                          <tr tal:repeat="item quotation['items']">
                            <td>${quotation.company_name}</td>
                            <td>${quotation.department}</td>
                            <td>${quotation.order_address}</td>
                            <td>${quotation.tel}</td>
                            <td>${quotation.email}</td>
                            <td>${quotation.addressee}</td>
                            <td>${item.number}</td>
                            <td>${item.description}</td>
                            <td>${item.quantity}</td>
                            <td>${item.unit_price}</td>
                          </tr>
                        </p>
                      </tbody>
                    </table>
                  </div>
                </div>
  </div>
</div>
